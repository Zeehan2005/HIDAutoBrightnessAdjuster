<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- 将框架设为支持 WinRT API 的 Windows 10 版本 -->
    <TargetFramework>net8.0-windows10.0.22621.0</TargetFramework>
    <!-- 启用 WinRT 支持 -->
    <UseWinRT>true</UseWinRT>
    <!-- 可选：如果使用 Windows.Forms 调试灯光，可启用 -->
    <!-- <UseWindowsForms>true</UseWindowsForms> -->
    <EnableCsWinRT>true</EnableCsWinRT>
    <OutputType>Exe</OutputType>
    <SupportedOSPlatformVersion>10.0.22621.0</SupportedOSPlatformVersion>
  </PropertyGroup>

  <ItemGroup>
    <!-- 引入 System.Management，用于 WMI 调整亮度 -->
    <PackageReference Include="System.Management" Version="9.0.3" />
    <!-- 引入 WinRT 运行时契约，包含 Windows.Devices.Sensors -->
    <PackageReference Include="Microsoft.Windows.SDK.Contracts" Version="10.0.22621.755" />
    <PackageReference Include="Microsoft.Windows.CsWinRT" Version="1.3.1" />
  </ItemGroup>

</Project>
